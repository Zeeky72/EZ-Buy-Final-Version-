@{


    <link href="~/PaymentResources/css/style.css" rel="stylesheet" />
}
@if (Session["Username"].ToString() == null && Session["Role"].ToString() == null)
{
    Html.RenderPartial("_LogInError");
}
<h1>Payment Widget</h1>
<body style="background-image: url('../../loginresource/images/pop.png'); ">


    @using (Html.BeginForm(new { htmlAttributes = new { @style = "background-color:antiquewhite" } }))
    {

        <div class="check">
            <div class="check-head">
                <h2>Payment Method: <span class="header-text">Debit/Credit Card</span></h2>
                <small class="strip"> </small>
            </div>
            <div class="check-bottom">
                <form>
                    <p>Card Holder Name</p>
                    <input type="text" id="_name"  onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'John Smith';}" required>
                    <p>Credit Card Number</p>
                    <input type="text" min="10" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '';}" required>
                    <p>Expiry Date</p>
                    <div class="expir-picker1">
                        <ul>
                            <li>
                                <select class="drop-date" required>
                                    <option>January</option>
                                    <option>February</option>
                                    <option>March</option>
                                    <option>April</option>
                                    <option>May</option>
                                    <option>June</option>
                                    <option>July</option>
                                    <option>August</option>
                                    <option>September</option>
                                    <option>October</option>
                                    <option>November</option>
                                    <option>December</option>
                                </select>
                            </li>
                            <li>
                                <select class="drop-date" required>
                                    <option>2015</option>
                                    <option>2016</option>
                                    <option>2017</option>
                                    <option>2018</option>
                                    <option>2019</option>
                                    <option>2020</option>
                                    <option>2021</option>
                                    <option>2022</option>
                                    <option>2023</option>
                                    <option>2024</option>
                                    <option>2025</option>
                                    <option>2026</option>
                                </select>
                            </li>
                            <li><a href="#"><i class="fa fa-calendar-o"></i></a></li>
                        </ul>
                    </div>
                    <div class="cvv-numb">
                        <div class="cvv-text">
                            <p>Cvv Number</p>


                            <input type="text" name="UserName" placeholder="CVV" required>


                        </div>
                        <div class="cvv-para">
                            <p>Please Check This Field</p>
                        </div>
                        <div class="clear"> </div>
                    </div>
                    <div>
                        <input type="submit" value="Submit" class="btn btn-default" />
                    </div>

                </form>
            </div>
        </div>
     

    }
    </body>



