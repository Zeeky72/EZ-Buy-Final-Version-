@model OnlineMovieV04.Models.UserDetail
@{
    Layout = null;
    <link href="~/logInResource/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/logInResource/css/style.css" rel="stylesheet" />

}

<div class="w3l-signinform">
    <!-- container -->
    <div class="wrapper">
        <!-- main content -->
        <div class="w3l-form-info">
            <div class="w3_info">
                <h1>Welcome Back</h1>
                <p class="sub-para">@ViewBag.Message</p>
                @if (Session["success"].ToString() == "abc")
                {
                <h2>YOUR NEW PASSWORD WOULD BE GENERATED HERE:- @Session["Password"].ToString()</h2>}


                <h2>Forgot Password</h2>

                @using (Html.BeginForm("ForgotPassword", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-success", style = "background-color:white" })



                    <div class="input-group">
                        <span><i class="fa fa-user" aria-hidden="true"></i></span>
                        <input type="text" name="UserName" placeholder="Email or Username" required="">
                    </div>
                    <button class="btn btn-primary btn-block" name="Submit" onclick="SubmitEvent" type="submit">Submit</button>
                    if (Session["success"].ToString() == "abc")
                    {
                        if (Model.Password == null)
                        {
                            <button>
                                @Html.ActionLink("LogIn", "LogIn")
                            </button>
                        }
                    }
                }


            </div>
        </div>
        <!-- //main content -->
    </div>
    <!-- //container -->
    <!-- footer 
    <div class="footer">
        <p>
            &copy; 2021 Gathering Log In form. All Rights Reserved | Design by <a href="https://w3layouts.com/"
                                                                                  target="blank">W3layouts</a>
        </p>
    </div>
    <!-- footer -->
</div>
