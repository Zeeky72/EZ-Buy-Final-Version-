@model OnlineMovieV04.Models.UserDetail
@{
    Layout = null;
    <link href="~/logInResource/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/logInResource/css/style.css" rel="stylesheet" />

}




<body>
    <div class="w3l-signinform">
        <!-- container -->
        <div class="wrapper">
            <!-- main content -->
            <div class="w3l-form-info" >
                <div class="w3_info">
                    <h1>Welcome Back</h1>
                    <p class="sub-para">Log In To Explore World Of Movies</p>
                    <h2>Log In</h2>

                    @using (Html.BeginForm("LogIn", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                
                    @Html.ValidationSummary(true, "", new { @class = "text-success", style = "background-color:white" })
               

                        
                        <div class="input-group">
                            <span><i class="fa fa-user" aria-hidden="true"></i></span>
                            <input type="text" name="UserName" placeholder="Email or Username" required="">
                        </div>
                        <div class="input-group two-groop">
                            <span><i class="fa fa-key" aria-hidden="true"></i></span>
                            <input type="Password" name="Password" placeholder="Password" required="">
                        </div>
                        <div class="form-row bottom">
                            <div class="form-check">
                                <input type="checkbox" id="remenber" name="remenber" value="remenber">
                                <label for="remenber"> Remember me?</label>
                            </div>
                            <button>
                                @Html.ActionLink("Forgot password?", "ForgotPassword")
                            </button>
                        </div>
                        <button class="btn btn-primary btn-block" onclick="SubmitEvent" type="submit">Log In</button>
                    }

                    <p class="account">Don't have an account? <a href="Home/SignUp">Register</a>
                    
                    
                    </p>
                </div>
            </div>
            <!-- //main content -->
        </div>
        <!-- //container -->
        <!-- footer
        <div class="footer">
            <p>
                &copy; 2021 Gathering Log In form. All Rights Reserved | Design by <a href="https://w3layouts.com/"
                                                                                      target="blank">W3layouts</a>
            </p>
        </div>
        <!-- footer -->
    </div>

</body>